<h1 style="margin:50px 0 30px 50px;">Add a job</h1>
<%= simple_form_for @job do |f| %>

   <%= f.input :title %>
   <%= f.input :description %>
   <%= f.input :wage_upper_bound, :label => "薪资上限" %>
   <%= f.input :wage_lower_bound, :label => "薪资上限" %>
   <%= f.input :contact_email %>

<%= f.submit "Submit", class: "btn btn-primary", data: {disable_with: "Submitting..."} %>
<% end %>
