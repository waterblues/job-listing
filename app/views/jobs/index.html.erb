<br />
<div class="dropdown clearfix pull-left">
  <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
  排序
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
    <li>
      <%= link_to("按照薪水下限排序", jobs_path(:order => "by_lower_bound")) %>
    </li>
    <li>
      <%= link_to("按照薪水上限排序", jobs_path(:order => "by_upper_bound")) %>
    </li>
    <li>
      <%= link_to("按照发表时间排序", jobs_path) %>
    </li>
  </ul>
</div>

<div class="pull-right">
  <%= link_to("发布工作职位", new_job_path, :class => "btn btn-info btn-md") %>
</div>

<br />
<br />
<br />
<br />
<br />
<br />
<table class="table table-hover table-responsive">
  <thead>
    <tr class="info">
      <th>职位</th>
      <th>薪水上限</th>
      <th>薪水下限</th>
      <th>发布时间</th>
      <th>管理</th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
    <tr>
      <td>
        <%= link_to(job.title, job_path(job)) %>
      </td>
      <td>
        <%= job.wage_upper_bound %>
      </td>
      <td>
        <%= job.wage_lower_bound %>
      </td>

      <td>
        <%= job.created_at %>
      </td>
      <td>
        <%= link_to("编辑", edit_job_path(job)) %> |
        <%= link_to("删除", job_path(job), :method => :delete, :data => {:confirm => "Are you sure?"}) %>
      </td>
    </tr>
    <% end %>
  </tbody>


</table>
