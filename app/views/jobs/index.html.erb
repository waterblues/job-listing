

<div class="dropdown clearfix pull-right" style="margin:50px 30px 30px 0;">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">排序
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
    <li><%= link_to("按薪水下限排序", jobs_path(:order => "by_lower_bound")) %> </li>
    <li><%= link_to("按薪水上限排序", jobs_path(:order => "by_upper_bound")) %></li>
    <li><%= link_to("按发布日期排序", jobs_path) %></li>
  </ul>
</div>



<table class="table table-boldered">
  <thead>
 <th>Title</th>
 <th>薪水上限</th>
 <th>薪水下限</th>
 <th>发布日期</th>
 </thead>
  <% @jobs.each do |job| %>
  <tr>
    <br>
    <td>
      <%= link_to(job.title, job_path(job)) %>
    </td>
    <td>
      <%= job.wage_upper_bound %>
    </td>
    <td>
      <%= job.wage_lower_bound %>
    </td>
    <td>
      <%= job.created_at %>
    </td>
  </tr>
  <% end %>
</table>
