<br />
<div class="pull-right">
  <%= link_to("发布工作职位", new_job_path, :class => "btn btn-info btn-md") %>
</div>
<br />
<br />
<br />
<br />

<table class="table table-hover table-responsive">
  <thead>
    <tr class="info">
      <th>职位</th>
      <th>管理</th>
      <th>发布时间</th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
    <tr>
      <td>
        <%= link_to(job.title, job_path(job)) %>
      </td>
      <td>
        <%= link_to("编辑", edit_job_path(job)) %> |
        <%= link_to("删除", job_path(job), :method => :delete, :data => {:confirm => "Are you sure?"}) %>
      </td>
      <td>
        <%= job.created_at %>
      </td>
    </tr>
    <% end %>
  </tbody>


</table>
