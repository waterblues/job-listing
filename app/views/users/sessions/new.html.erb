<div class="container-fluid">
  <div class="col-md-4 col-md-offset-4">

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <br />
  <br />
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, label:"电子邮箱", placeholder:"请输入电子邮箱", type: "email", value: "", name:"user[email]", input_html: {class:"string email required form-control"} %>
    <br />
    <%= f.input :password, required: false, label:"密码", placeholder: "至少六位", type:"password", name:"user[password]", id:"user_password", input_html: {class: "form-group password required user_password"} %>
  </div>

  <br />
  <div class="form-actions">
    <%= f.button :submit, :label => "登录", type:"submit", name:"commit", value:"登录", input_html:{class:"btn btn-default btn-devise btn-block"} %>
  </div>
<% end %>

</div>
</div>
